model Users {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  state    States[]
  category Categories[]
  task     Tasks[]
}

model States {
  id      Int     @id @default(autoincrement())
  user_id Int
  name    String
  user    Users   @relation(fields: [user_id], references: [id])
  task    Tasks[]
}

model Categories {
  id      Int     @id @default(autoincrement())
  user_id Int
  name    String
  user    Users   @relation(fields: [user_id], references: [id])
  task    Tasks[]
}

model Tasks {
  id          Int        @id @default(autoincrement())
  user_id     Int
  state_id    Int
  category_id Int
  title       String
  date        DateTime   @db.Date
  note        String
  user        Users      @relation(fields: [user_id], references: [id])
  state       States     @relation(fields: [state_id], references: [id])
  category    Categories @relation(fields: [category_id], references: [id])
}